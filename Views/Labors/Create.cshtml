@model NBDcase.Models.Labor

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Labor</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LaborType" class="control-label"></label>
                <input asp-for="LaborType" class="form-control" />
                <span asp-validation-for="LaborType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LaborPrice" class="control-label"></label>
                <input asp-for="LaborPrice" class="form-control" />
                <span asp-validation-for="LaborPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LaborCost" class="control-label"></label>
                <input asp-for="LaborCost" class="form-control" />
                <span asp-validation-for="LaborCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create Labour" class="btn btn-primary" />
                &nbsp;&nbsp;&nbsp;
                <a href='@Url.Action("Create", "Employee")'>
                    <input type='button' value='Add Employee' class="btn btn-primary" />
                </a>
                
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
